@using ProjektyBazyDanych.ViewModels
@model ProjectsStatsViewModel

@{
	ViewBag.Title = "Szczegóły projektu";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<div><h2>Statystyki projektów</h2><br /></div>
<br />

<table id="myTable" class="table table-bordered table-responsive table-hover">
	<thead>
		<tr>
			<th>Liczba projektów</th>
			<th>Kwota minimalna</th>
			<th>Kwota maksymalna</th>
			<th>Średnia kwota</th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td>@Model.ProjectsCount</td>
				<td>@Model.PriceMin</td>
				<td>@Model.PriceMax</td>
				<td>@Model.PriceAvg</td>
			</tr>
	</tbody>

</table>

<script>
	$(document).ready(function() {
		$('#myTable').DataTable();
	});
</script>